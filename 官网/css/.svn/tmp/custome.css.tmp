/**
 * 公共类的定义
 * */
body{
	font:14px/1.5 "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}
h1, h2, h3, h4, h5, h6{
	font-family:"Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}
input,select,textarea{
	box-shadow: none !important;
}

/*纯图片的容器，设置line-height为0，解决某些浏览器下的无故间隙*/
.img-wrapper{position: relative;}
.img-wrapper img{
	width: 100%;
	line-height: 0;
}
/*文本溢出显示...*/
.text-ellipsis{
	overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/*页面内部公共类*/
.bg-f8{
	background: #f8f8f8;
}
.text-666{
	color: #666;
}
.inline-block{
	display: inline-block;
}
/**
 * 开创金融首页
 * */
/*头部*/bsDetail-other
.bp-logo{
	margin-bottom:10px;
}
.bp-section{padding:30px 0;}
.bp-section-title{color: #323232;}
.bp-section-title h3{border-bottom: 1px solid #FD7802;line-height: 36px;}
.bp-section-title h3 strong{font-size: larger;color: #ED5118;}
.bp-section-support .btn{padding: 9px 30px;}
.bp-section-support,.bp-section-grown{padding-top: 30px;padding-bottom: 30px;}
.bp-section-support-body{
	border: 1px solid #E3E3E3;
	padding:40px 10px 60px;
	text-align: center;
}
.bp-section-support-body i{
	display: block;
	font-size: 60px;
	margin-bottom: 30px;
	color: #E6551E;
	line-height: 60px;
	transition:all 0.5s;
}
.bp-section-support-body p{
	line-height: 25px;
	margin-top: 15px;
	margin-bottom: 40px;
	color: #666;
}
.bp-section-support-body:hover{
	box-shadow: 0 0 10px rgba(0,0,0,0.2);
}
.bp-section-support-body:hover i{
	transform: scale(1.5);
}
.bg-section-grown-title{
	position: relative;
	border:1px solid #E2E2E2;
	background-color: #FFF;
	color: #FF7506;
	z-index: 4;
	cursor: pointer;
	transition: all .5s;
}
.bg-section-grown-title-img{
	padding:30px 20px;
	text-align: center;
	border-bottom: 1px solid #E2E2E2;
	transition: all .5s;
}
.bg-section-grown-title-img .image2{
	display: none;
}
.bg-section-grown-title p{
	padding:20px;
	text-align: center;
	font-size: 18px;
}
.bg-section-grown-title.active,.bg-section-grown-title.active .bg-section-grown-title-img{
	border-color: #FF7607;
}
.bg-section-grown-title.active .bg-section-grown-title-img{
	background-color: #FF7607;
	color: #FFF;
}
.bg-section-grown-title.active .bg-section-grown-title-img .image2{
	display: inline-block;
}
.bg-section-grown-title.active .bg-section-grown-title-img .image1{
	display: none;
}
@media  screen and (min-width: 768px){
	.bg-section-grown-title.active:before,.bg-section-grown-title.active:after{
		position: absolute;
		bottom: 0;
		left:50%;
		content: '';
		display: inline-block;
		margin-left: -16px;
		border-top: 16px dashed;
	    border-top: 16px solid\9;
	    border-right: 16px solid transparent;
	    border-left: 16px solid transparent;
		transition: all 0.5s;
	}
	.bg-section-grown-title.active:before{
		bottom: -16px;
		border-top-color: #FF7607;
	}
	
	.bg-section-grown-title.active:after{
		bottom: -15px;
		border-top-color: #FFF;
		z-index: 3;
	}
}
.bg-section-grown-title.active:before{
	bottom: -16px;
	border-top-color: #FF7607;
}

.bg-section-grown-title.active:after{
	bottom: -15px;
	border-top-color: #FFF;
	z-index: 3;
}
#siteNav .navbar,.navbar.no-margin{
	margin-bottom: 0;
}
.homeHeader{
	padding-top: 20px;
}
.homeHeader .nav-service{
	display: inline-block;
	text-align: center;
	margin-left:15px;
	margin-bottom: 0;
	color: #666666;
	text-decoration: none;
}
@media only screen and (max-width: 768px) {
	.homeHeader .nav-service{
		margin-top:20px;
	}
}
.homeHeader .bp-logo{
	margin:0 0 30px;
}
.homeHeader a.nav-service:hover{
	color: #FEAC63;
}
.homeHeader .nav-service  i{
	font-size: 28px;
	color: #FEAC63;
	margin-top:20px;
}
.homeHeader .nav-service p{
	font-size: 14px;
}
.homeHeader .search{width: 400px !important;margin-right: 50px;margin-bottom:15px;}
.homeHeader .search .input-icon{
	width: 400px !important;
}
.homeHeader .search input{
	width: 100% !important;
	height: 40px;
	border: 1px solid #EC6428;
	padding-left: 33px;
}
.homeHeader .search i{
	color: #ccc;
    display: block;
    position: absolute;
    margin: 9px 2px 4px 10px;
    width: 16px;
    font-size: 16px;
    text-align: center;
    top: 0;
    left: 0;
    z-index: 4;
}
.homeHeader .search .searchBtn{
	background: #EC6428 ;
	color: #fff;
	height: 40px;
}
.homeHeader .navbar-collapse{
	line-height: 30px;
}
.homeHeader .navbar-collapse a,.navbar-collapse li a:focus{
	color: #666;
	font-size: 15px;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.homeHeader .navbar-collapse li:first-child a{
	border-right-color:transparent;
}
@media screen and (max-width:768px) {
	.homeHeader .navbar-collapse a{
		border-right: none;
		font-size: 16px;
	}
}
.homeHeader .navbar-collapse li a:hover{
	background: initial;
	color: #7d9ae6;
}
.homeHeader .navbar-collapse li a.active{
	background: initial !important;
	color: #7d9ae6;
}
/*尾部*/
.homeFooter{
	position: relative;
	background:#343434 ;
	padding-top: 35px;
	padding-bottom: 55px;
	color:#C2C2C0;
}
.homeFooter a{
	line-height: 2rem;
	color:#C2C2C0;
	white-space: nowrap;
	text-decoration: none;
}
.homeFooter a:hover{
	color:#FF7506;
}
.homeFooter .nav-toggle a{
	color:#fff;
	font-size:18px;
}
.homeFooter .nav-toggle{
	margin-bottom: 15px;
}
.homeFooter .footer-ctrl dd{
	white-space: nowrap;
	line-height: 30px;
}
.homeFooter ul li{
	padding: 8px;
}
.footerbar{
	position: absolute;
	bottom: 0;
	width: 100%;
	color:#828282;
	background:#2C2C2C;
}
.footerbar ul{
	margin-bottom:0;
	text-align:center;
	line-height: 30px;
}
.footerbar ul a:hover{
	text-decoration:underline;
}


